{
  "name": "loyalty-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:local": "yarn migration:run && yarn seeds:run && yarn start:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "git rev-parse --is-inside-work-tree > /dev/null 2>&1 && git config --local core.hooksPath .githooks/ && chmod ug+x .githooks/* || echo \"Not inside a Git repository.\"",
    "docker:dev": "docker compose -f dev-docker-compose.yml up",
    "docker:dev:stop": "docker compose -f dev-docker-compose.yml down",
    "docker:prod": "docker compose up -d",
    "typeorm": "ts-node --project tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "yarn run typeorm -d ./src/db/datasource.ts migration:generate ./src/db/migrations/$MIGRATION_NAME",
    "migration:create": "yarn run typeorm migration:create ./src/db/migrations/$MIGRATION_NAME",
    "migration:revert": "yarn run typeorm -d ./src/db/datasource.ts migration:revert",
    "migration:run": "yarn run typeorm -d ./src/db/datasource.ts migration:run",
    "seeds:run": "ts-node --project tsconfig.json -r tsconfig-paths/register ./src/db/seeds/seed.ts"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.8",
    "@keyv/redis": "^4.4.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/nest": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "@types/bcrypt": "^5.0.2",
    "@types/passport-http": "^0.3.11",
    "bcrypt": "^6.0.0",
    "cache-manager": "^6.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.2",
    "mysql2": "^3.14.1",
    "nestjs-request-context": "^4.0.0",
    "nestjs-typeorm-paginate": "^4.1.0",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.23",
    "uuid": "^11.1.0",
    "zod": "^3.25.16"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test",
      "dist",
      ".entity.ts",
      ".config.ts",
      ".module.ts",
      "main.ts",
      "index.ts",
      ".guard.ts",
      ".strategy.ts",
      "db",
      "db/migrations",
      "interceptors",
      "base.service.ts",
      "user.decorator.ts",
      "logger.service.ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/test/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}

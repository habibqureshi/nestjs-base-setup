# Database Configuration
DB_TYPE=postgres                    # Database type (postgres, mysql, mongodb)
DB_HOST=localhost                   # Database host
DB_PORT=5432                        # Database port
DB_USER=postgres                    # Database username
DB_PASSWORD=password                # Database password
DB_NAME=postgres                    # Database name
DB_URL=mongodb://localhost:27017    # MongoDB URL (if using MongoDB)
DB_SYNCHRONIZE=false                # Auto-synchronize database schema (true/false)

# JWT Configuration
JWT_SECRET=your-secret-key          # JWT secret key
JWT_TOKEN_EXPIRY=1h                 # JWT token expiry time
JWT_REFRESH_SECRET=your-refresh-secret-key  # JWT refresh token secret
JWT_REFRESH_EXPIRY=7d               # JWT refresh token expiry time

# Rate Limiting
RATE_LIMIT_TTL=60                   # Rate limit time window in seconds
RATE_LIMIT_LIMIT=10                 # Maximum number of requests per time window

# Redis Configuration
REDIS_USERNAME=                     # Redis username (optional)
REDIS_PASSWORD=                     # Redis password (optional)
REDIS_HOST=localhost                # Redis host
REDIS_PORT=6379                     # Redis port
REDIS_USER_TTL=86400000            # Redis user cache TTL in milliseconds (24 hours)

# Environment
ENV=development                     # Application environment (development, production, test)